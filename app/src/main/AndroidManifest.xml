<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.andeladeveloper.messageschedular">
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.QUICKBOOT_POWEROFF" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/messaeg_schedular_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/messaeg_schedular_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name=".services.MyService"
            android:enabled="true" />

        <receiver android:name=".ScheduleMessage" />
        <receiver
            android:name=".BroadcastReceivers.BootReciever"
            android:enabled="true"
            android:exported="true"
            android:label="RestartServiceWhenStopped">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="com.htc.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>

        <receiver android:name=".BroadcastReceivers.ShutDownReceiver">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_SHUTDOWN" />
                <action android:name="android.intent.action.QUICKBOOT_POWEROFF" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ScheduleMessageActivity"
            android:label="@string/schedule_page_name"
            android:parentActivityName=".Activities.MainActivity" />
        <activity
            android:name=".Activities.Dialog"
            android:label="Re-occurring"
            android:textColor="#000"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".Activities.SingleScheduledMessage"
            android:label="@string/title_activity_single_scheduled_message"
            android:parentActivityName=".Activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.andeladeveloper.messageschedular.Activities.MainActivity" />
        </activity>
        <activity
            android:name=".Activities.StatusDialogActivity"
            android:label="Reports"
            android:textColor="#000"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".Activities.SingleCollectionActivity"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".Activities.ContactListActivity"
            android:label="Select Contacts"
            android:parentActivityName=".Activities.SingleScheduledMessage" />
        <activity
            android:name=".Activities.NotificationActivity"
            android:label="Notifications"
            android:parentActivityName=".Activities.MainActivity" />
        <activity
            android:name=".Activities.FeedbackActivity"
            android:label="Feedback"
            android:parentActivityName=".Activities.MainActivity" />
        <activity android:name=".Activities.StartServicesActivity" />
        <activity
            android:name=".Activities.AboutMessageScheduler"
            android:label="About Message Scheduler"
            android:parentActivityName=".Activities.MainActivity"
            >

        </activity>
    </application>

</manifest>