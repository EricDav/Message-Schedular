<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andeladeveloper.messageschedular.Activities.ScheduleMessageActivity">


    <LinearLayout
        android:id="@+id/main"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textWidget"
            android:layout_height="70dp"
            android:layout_width="fill_parent">
        <EditText
            android:id="@+id/phoneNumberId"
            android:focusable="false"
            android:singleLine="true"
            android:backgroundTint="@android:color/holo_red_light"
            android:drawableRight="@drawable/ic_people_black_24dp"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:hint="Phone number"
            />
    </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textWidget2"
            android:layout_marginTop="10dp"
            android:layout_height="120dp"
            android:layout_width="fill_parent"
            >

            <EditText
                android:id="@+id/messageId"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/holo_red_light"
                android:hint="Message"
                android:inputType="text|textMultiLine" />
    </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textWidget3"
            android:layout_marginTop="0dp"
            android:layout_height="80dp"
            android:layout_marginRight="190dp"
            android:layout_width="fill_parent"
            >

            <EditText
                android:id="@+id/dateId"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:focusable="false"
                android:backgroundTint="@android:color/holo_red_light"
                android:hint="Date"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textWidget4"
            android:layout_marginTop="-71dp"
            android:layout_marginLeft="190dp"
            android:layout_height="70dp"
            android:layout_width="fill_parent"
            >

            <EditText
                android:id="@+id/timeId"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:hint="Time"
                android:backgroundTint="@android:color/holo_red_light"
                android:focusable="false"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/repeatId"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/repeatSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="" />
        <Button
            android:id="@+id/scheduleMessageButtonId"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_schedule_button"
            android:onClick="onSubmit"
            android:text="SAVE"
            android:textColor="#FFFFFF" />
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
