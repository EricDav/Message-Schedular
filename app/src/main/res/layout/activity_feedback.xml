<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andeladeveloper.messageschedular.Activities.FeedbackActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="50dp"
        >
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textWidget2"
            android:layout_marginTop="20dp"
            android:layout_height="120dp"
            android:layout_width="fill_parent"
            >

            <EditText
                android:id="@+id/nameId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Name (optional)"
                android:singleLine="true"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textWidget3"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            >

            <EditText
                android:id="@+id/feedbackId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="How can we inprove?"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/feedbackButtonId"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:onClick="onClick"
            android:layout_marginTop="100dp"
            android:background="@drawable/round_schedule_button"
            android:text="SEND"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</ScrollView>
