<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.andeladeveloper.messageschedular.ContactListActivity"
    tools:showIn="@layout/activity_contact_list">
        <EditText
            android:id="@+id/searchContactId"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:hint="To"
            android:inputType="text"
            android:backgroundTint="@android:color/holo_red_light"
            android:layout_marginStart="8dp"
            />
                <ImageView
                    android:id="@+id/clearImageViewId"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="-35dp"
                    android:src="@drawable/ic_clear_black_24dp"
                    />
            <TextView
                android:id="@+id/defaultResultText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:text="Enter a number or tap a contact to add to group"
                />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_contact_view_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:layout_alignParentTop="true"
            android:scrollbars="horizontal"
            />
</LinearLayout>
